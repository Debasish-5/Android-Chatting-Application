<!-- res/drawable/chat_bubble_with_tail.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFE5E5"/> <!-- Replace with your desired background color -->
            <corners android:topLeftRadius="9dp" android:topRightRadius="9dp" android:bottomRightRadius="9dp" android:bottomLeftRadius="-5dp"/>            <padding android:left="10dp" android:top="5dp" android:right="10dp" android:bottom="5dp"/>
        </shape>
    </item>
    <item android:right="10dp" android:bottom="5dp">
        <rotate
            android:fromDegrees="45">
            <shape android:shape="rectangle">
                <solid android:color="#FFE5E5"/>
                <size android:width="10dp" android:height="10dp"/>
            </shape>
        </rotate>
    </item>
</layer-list>
