<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@color/purple">

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="156dp"
        android:layout_height="151dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="33dp"
        android:background="@drawable/logo" />

    <TextView
        android:id="@+id/verificationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verification"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/verificationSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please enter the OTP sent to your device"
        android:textSize="19sp"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:textAlignment="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <EditText
            android:id="@+id/otpDigit1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/otp_edittext_bg"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:importantForAccessibility="yes"
            android:nextFocusDown="@id/otpDigit2"/>

        <EditText
            android:id="@+id/otpDigit2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/otp_edittext_bg"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:layout_marginStart="8dp"
            android:importantForAccessibility="yes"
            android:nextFocusDown="@id/otpDigit3"/>

        <EditText
            android:id="@+id/otpDigit3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/otp_edittext_bg"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:layout_marginStart="8dp"
            android:importantForAccessibility="yes"
            android:nextFocusDown="@id/otpDigit4"/>

        <EditText
            android:id="@+id/otpDigit4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/otp_edittext_bg"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:layout_marginStart="8dp"
            android:importantForAccessibility="yes"
            android:nextFocusDown="@id/otpDigit5"/>

        <EditText
            android:id="@+id/otpDigit5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/otp_edittext_bg"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:layout_marginStart="8dp"
            android:importantForAccessibility="yes"
            android:nextFocusDown="@id/otpDigit6"/>

        <EditText
            android:id="@+id/otpDigit6"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/otp_edittext_bg"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:layout_marginStart="8dp"
            android:importantForAccessibility="yes"/>
    </LinearLayout>

    <Button
        android:id="@+id/verifyOtpButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:backgroundTint="#12DA4A"
        android:padding="12dp"
        android:text="VERIFY"
        android:textColor="#FFFFFF"
        android:textSize="19sp" />
</LinearLayout>
